// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(cuid())
  clerkId         String           @unique
  email           String           @unique
  reportFrequency ReportFrequency  @default(MONTHLY)
  reportDay       Int              @default(1) // 1-31 for Monthly, 0-6 for Weekly
  createdAt       DateTime         @default(now())
  categories      Category[]
  expenses        Expense[]
}

enum ReportFrequency {
  WEEKLY
  MONTHLY
}

enum TrackingMode {
  CALENDAR
  BUDGET
}

model Category {
  id                   String            @id @default(cuid())
  userId               String
  user                 User              @relation(fields: [userId], references: [clerkId], onDelete: Cascade)
  name                 String
  trackingMode         TrackingMode      @default(CALENDAR)
  frequency            CategoryFrequency @default(MONTHLY)
  intervalCount        Int               @default(1) // e.g., every 2 months
  specificDays         Int[]             // 0-6 for SUNDAY-SATURDAY
  fixedAmount          Float?
  budgetLimit          Float?            // Used for BUDGET tracking mode
  isEmailEnabled       Boolean           @default(true)
  isActive             Boolean           @default(true)
  color                String?
  icon                 String?
  sortOrder            Int               @default(0)
  createdAt            DateTime          @default(now())
  expenses             Expense[]
  recurringState       RecurringState?

  @@unique([userId, name])
}

enum CategoryFrequency {
  DAILY
  WEEKLY
  MONTHLY
  CUSTOM
  WEEKDAYS
}

model Expense {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [clerkId], onDelete: Cascade)
  categoryId      String
  category        Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  amount          Float
  date            DateTime @default(now())
  isAutoGenerated Boolean  @default(false)
  description     String?
  createdAt       DateTime @default(now())
}

model RecurringState {
  id               String   @id @default(cuid())
  categoryId       String   @unique
  category         Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  lastGeneratedDate DateTime
}
